class Solution {
  public:
    bool isEven(int n) {
        return (n % 2== 0);
    }
    int main(){
    int n;
    cout <<"n: ";
    cin >> n;
    
    if(isEven(n)) {
        cout<<"true";
    }else{
        cout<<"false";
    }
    }
};
